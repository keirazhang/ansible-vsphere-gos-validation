# This file lists the dependent packages for building open-vm-tools source tarball on VMware Photon OS
dependencies:
  # Basic build tools
  - autoconf
  - automake
  - gcc
  - make
  - pkg-config
  - rpm-build

  # Documentation
  - doxygen

  # Development libraries
  - build-essential
  - glib-devel
  - glibc-devel
  - fuse-devel
  - libdrm-devel
  - libmspack-devel
  - libtirpc-devel
  - libtool
  - openssl-devel
  - procps-ng-devel
  - systemd-devel
  - Linux-PAM-devel
  - libltdl-devel

  # XML related dependencies
  - libxml2-devel
  - xmlsec1-devel

  # Others
  - rpcsvc-proto
  - lsof
